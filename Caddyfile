literature-explorer.xyz, www.literature-explorer.xyz {
    log {
        output stdout
        level INFO
    }

    # Serve Frontend
    root * /srv
    encode gzip

    # 1. API: Handle API requests exclusively
    handle /api/* {
        reverse_proxy backend:8000
    }

    # 2. Frontend: Handle everything else (fallback)
    handle {
        file_server
        try_files {path} {path}/ /index.html
    }
}
