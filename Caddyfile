{
    # No email needed for HTTP
}

# :80 tells Caddy to listen on Port 80 for ANY IP/DNS
:80 {
    # Serve Frontend (built static files)
    root * /srv
    encode gzip
    file_server

    # Reverse Proxy API requests to Backend container
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Handle React Router (Client-side routing)
    try_files {path} {path}/ /index.html
}
